{
  "name": "dissent.js",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Dissent.js",
  "main": "main.min.js",
  "files": [
    "public"
  ],
  "scripts": {
    "create-component": "node createComponent.js",
    "create-view": "node createView.js",
    "create-nav": "node createNav.js",
    "remove-template": "node remove-template-extension.js",
    "merge-scss": "node compile-scss.js",
    "footer-header": "node write-layout-to-index.js",
    "minify-html": "node minify-html.js",
    "prebuild": "node write-components-to-html.js",
    "build-1": "rimraf dist && webpack --mode production && cp -R src/components dist/components && cp -R src/layout dist/layout && cp -R src/views dist/views && cp -R src/images dist/images && yarn merge-scss ",
    "build-2": "yarn footer-header",
    "build-3": "cp src/index.html.template dist/index.html.template && rimraf ./dist/components/**/*.html ./dist/views/**/*.html ./dist/index.html",
    "build-4": "yarn remove-template",
    "build-5": "rimraf ./dist/components/**/*.js ./dist/components/**/*.scss ./dist/components/**/*.css ./dist/components/**/*.html ./dist/components/ ./dist/views/**/*.scss ./dist/views/**/*.css  ./src/views/**/*.template ./src/layout/**/*.template ./src/index.html.template",
    "build-6": "yarn minify-html",
    "build": "yarn build-1 && yarn build-2 && yarn build-3 && yarn build-4 && yarn build-5 && yarn build-6",
    "start": "webpack-dev-server --open --mode development"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "babel-jest": "^29.5.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-rewire-exports": "^2.3.0",
    "clean-css": "^5.3.2",
    "copy-webpack-plugin": "^6.0.4",
    "css-loader": "^6.7.3",
    "glob": "^9.3.4",
    "html-minifier-terser": "^7.2.0",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.2",
    "node-sass": "^8.0.0",
    "rimraf": "^4.1.2",
    "sass": "^1.58.3",
    "sass-loader": "^13.2.0",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@testing-library/dom": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "copyfiles": "^2.4.1",
    "html-loader": "^4.2.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "webpack-merge": "^5.8.0"
  }
}
